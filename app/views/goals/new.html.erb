<h1>Add a New Goal</h1>

<div class="form-wrapper">
  <%= render '/sessions/errors', instance: @goal %>
  <%= form_for @goal do |g| %>
    <%= g.text_field :title, placeholder: 'title', class: 'form-field' %><br>
    <%= g.fields_for :likes, @goal.likes.build do |l| %>
      <%= render "add", l: l %>
    <% end %>
    <div class="checkbox-wrapper">
      <%= g.collection_check_boxes :category_ids, Category.all, :id, :name do |b|
        b.label { b.check_box + b.text }
      end %>
    </div>
    <%= g.submit %>
  <% end %>
</div>
