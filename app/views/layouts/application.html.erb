<!DOCTYPE html>
<html>
<head>
  <title>BucketBuddies</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<nav>
  <div class="logo"><%= link_to 'BucketBuddies', home_path %></div>
  <% if session[:user_id] %>
    <div class="nav-float-right">
      <%= link_to get_current_user.username, home_path %>
      <%= link_to "Your Profile", user_path(session[:user_id]) %>
      <%= link_to "Add a Goal", new_goal_path %>
      <%= link_to "Browse Goals", goals_path %>
      <div class="logout-button">
        <%= form_tag controller: 'sessions', action: 'destroy', method: 'post'  do %>
          <input type=submit value='Logout'>
        <% end %>
      </div>
    </div>
  <% else %>
    <%= link_to "Login", login_path, class: 'nav-float-right'%>
    <%= link_to "Browse Goals", goals_path, class: 'nav-float-right' %>
  <% end %>
</nav>

<body>
<div class="page-content">
<%= yield %>
</div>
</body>
</html>
