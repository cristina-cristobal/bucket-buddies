<%= render '/sessions/errors', instance: @user %>
<%= form_for user do |f| %>
  <div><%= f.text_field :username, placeholder: 'Username', class: 'form-field' %></div>
  <div><%= f.text_field :email, placeholder: "Email Address", class: 'form-field' %></div>
  <div><%= f.password_field :password, placeholder: 'Password', class: 'form-field' %></div>
  <div><%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-field' %></div>
  <%= f.submit %>
<% end %>