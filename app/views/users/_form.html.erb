<%= form_for user do |f| %>
  <%#= f.label :username %>
  <%= f.text_field :username, placeholder: 'Username', class: 'form-field' %> <br>
  <%#= f.label :email %>
  <%= f.text_field :email, placeholder: "Email Address", class: 'form-field' %> <br>
  <%#= f.label :password %>
  <%= f.password_field :password, placeholder: 'Password', class: 'form-field' %> <br>
  <%#= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-field' %> <br>
  <%= f.submit %>
<% end %>